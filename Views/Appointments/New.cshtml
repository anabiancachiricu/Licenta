@model MedOffice.Models.Appointment
@{
    ViewBag.Title = "New";
}

<link href="~/Content/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<body style="background-color: #eee;">

    <section class="vh-100">
        <div class="container h-100 align-content-center align-items-center">

            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black align-content-center align-items-center" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Adaugare programare </p>
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    <br />
                                    <p class="text-danger"> @ViewBag.mess</p>
                                    
                                    @using (Html.BeginForm(actionName: "New", controllerName: "Appointments"))
                                    {
                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                        <br />
                                        <p class="text-danger"> @ViewBag.message</p>
                                        <br />

                                        @Html.DropDownListFor(m => m.DoctorId, new SelectList(Model.Doctors, "Value", "Text", Model.Doctors.First()), null, new { @class = "form - control" })
                                        <br />
                                        <br />
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.DateTime, new { @class = "col-md-10 d-flex flex-row align-items-center  mb-4 control-label" })
                                            <input type="datetime-local" id="meeting-time"
                                                   name="DateTime" value=@DateTime.Now
                                                   min="2022-06-01T00:00" max="2025-06-15T00:00">

                                        </div>
                                        <div class="form-group">

                                            @Html.Label("Description", "Descriere", new { @class = "col-md-10 d-flex flex-row align-items-center  mb-4 control-label" })


                                            <div class="col-md-10 d-flex flex-row align-items-center mb-4">

                                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })


                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="row mb-4">
                                                <div class="col d-flex justify-content-center">

                                                    <div class="col-md-10 d-flex flex-row align-items-center mb-4">

                                                        <button class="btn btn-sm btn-outline-success" type="submit">
                                                            Adauga programarea
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                    }
                                </div>
                                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                        <img src="https://pbs.twimg.com/media/EfJu2FbU4AA-NIf.jpg"
                                             class="img-fluid" alt="Sample image" />

                                    </div>


                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
    </section>


    @section Scripts
{
        <script>
            $(document).ready(function () {

                $(function () {
                    $('#startDate').datepicker({
                        format: 'dd/mm/yyyy'
                    });
                });


            });
        </script>
    }

</body>

