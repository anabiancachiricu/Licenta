@model MedOffice.Models.LocationDepartment
@{
    ViewBag.Title = "Index";
}

<body style="background-color: #eee">
    <section class="vh-100">
        <br />
        <br />
        <div class="input-group rounded d-flex flex-row-reverse">
            <input type="text" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" value="@ViewBag.SearchString" />
            <span class="input-group-text border-0" id="search-addon">
                <i class="fas fa-search"></i>
            </span>
        </div>
        <div class="container h-100 align-content-center align-items-center" style="border-radius: 15px;">
            

            <ul class="list-group list-group-light align-content-center align-items-center" style="border-radius: 15px; padding:100px">

                @if (ViewBag.LocationDepartmentsCount != 0)
                {
                    foreach (var loc in ViewBag.locs)
                    {
                        <h2>@loc.Address</h2>
                        <ul class="list-group">
                            @foreach (var locdep in ViewBag.Locdeps)
                            {

                                if (locdep.Location == loc)
                                {
                                    <li class="list-group-item">@locdep.Department.DepartmentName</li>
                                }
                            }
                        </ul>

                    }


                    <br />
                }

                <a href="/Locations/Index" class="btn btn-outline-dark" data-mdb-ripple-color="dark">
                    Afiseaza locatii
                </a>
                <a href="/Departments/Index" class="btn btn-outline-dark" data-mdb-ripple-color="dark">
                    Afiseaza departamente
                </a>

                <br />
                @if (User.IsInRole("Administrator"))
                {
                    <a href="/LocationDepartments/New">
                        <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark">
                            Asociaza locatie si departament
                        </button>

                    </a>
                    <br />
                }

            </ul>
        </div>
    </section>

</body>