@model MedOffice.Models.LocationDepartment 
@{
    ViewBag.Title = "Idex";
}

<h2>Idex</h2>
@if (ViewBag.LocationDepartmentsCount != 0)
{
    foreach (var locdep in ViewBag.LocDeps)
    {
        <h2>@locdep.Location.Address</h2>
        <p>@locdep.Department.DepartmentName</p>

        <br />
    }

}

<a href="/LocationDepartments/Index/">Afisare lista locatii si departamente </a>
