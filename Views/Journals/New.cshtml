@model MedOffice.Models.Journal
@{
    ViewBag.Title = "New";
}




<body style="background-color: #eee;">

    <section class="vh-100">
        <div class="container h-100 align-content-center align-items-center">

            <div class="row d-flex justify-content-center align-items-center h-100">
                
                    <div class="card text-black align-content-center align-items-center" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Adaugare Intrare Jurnal </p>
                            <div class="row justify-content-center align-items-center align-content-center">


                                @using (Html.BeginForm(actionName: "New", controllerName: "Journals"))
                                {
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                   

                                    <div class="form-group">

                                        @Html.Label("Title", "Titlu", new { @class = "col-md-10 d-flex flex-row align-items-center  mb-4 control-label" })

                                        <div class="col-md-12 d-flex flex-row align-items-center mb-4">

                                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group invisible">
                                        @Html.LabelFor(m => m.UserId, new { @class = "col-md-10 d-flex flex-row align-items-center  mb-4 control-label" })
                                        <div class="col-md-12 d-flex flex-row align-items-center mb-4">
                                            @Html.TextBoxFor(m => m.UserId, new { @value = ViewBag.user, @readonly = "readonly", @visibility = "hidden" })
                                        </div>
                                    </div>

                                    <div class="form-group">

                                        @Html.Label("Description", "Descriere", new { @class = "col-md-10 d-flex flex-row align-items-center  mb-4 control-label" })


                                        <div class="col-md-12 d-flex flex-row align-items-center mb-4">

                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })


                                        </div>
                                    </div>
                                    <div class="align-items-center align-content-center">
                                        <div class="form-group invisible">
                                            @Html.LabelFor(m => m.Date, new { @class = "col-md-10 d-flex flex-row align-items-center  mb-4 control-label" })
                                            <div class="col-md-12 d-flex flex-row align-items-center mb-4">
                                                @Html.TextBoxFor(m => m.Date, new { @value = DateTime.Now, @readonly = "readonly", @visibility = "hidden" })
                                            </div>
                                        </div>


                                        <div class="form-group">

                                            @Html.Label("Simptoms", "Simptome", new { @class = "col-md-10 d-flex flex-row align-items-center  mb-4 control-label" })


                                            <div class="col-md-12 d-flex flex-row align-items-center mb-4">

                                                @Html.TextBoxFor(m => m.Simptoms, new { @class = "form-control" })


                                            </div>
                                        </div>






                                        <div class="form-group">
                                            <div class="row mb-4">
                                                <div class="col d-flex justify-content-center">

                                                    <div class="col-md-12 d-flex flex-row align-items-center mb-4">

                                                        <button class="btn btn-sm btn-outline-success" type="submit">
                                                            Adauga Intrarea de Jurnal
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                


                            </div>
                        </div>
                    </div>
                
            </div>
        </div>

    </section>


</body>