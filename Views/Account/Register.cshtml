@model MedOffice.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<body style="background-color: #eee;">

    <section class="vh-100" >
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>



                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal mx-1 mx-md-4", role = "form", enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <h4>Create a new account.</h4>
                                        <hr />
                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Email, new { @class = "col-md-10 d-flex flex-row align-items-center  mb-4 control-label" })
                                            <div class="col-md-10 d-flex flex-row align-items-center mb-4">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control " })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Password, new { @class = "col-md-10 d-flex flex-row align-items-center mb-4 control-label" })
                                            <div class="col-md-10 d-flex flex-row align-items-center mb-4">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-10 d-flex flex-row align-items-center mb-4 control-label" })
                                            <div class="col-md-10 d-flex flex-row align-items-center mb-4">
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(m => m.UserPhoto, new { @class = "col-md-10 control-label" })
                                            <div class="col-md-10 ">
                                                <input type="file" name="UserPhoto" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
                                            </div>
                                        </div>



                                        <div class="form-group">
                                            <div class="d-flex justify-content-center align-items-center mx-4 mb-3 mb-lg-4">
                                                <input type="submit" class="btn btn-primary btn-lg" value="Register" />
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://www.jing.fm/clipimg/detail/133-1335402_cartoon-business-people-team-of-doctors-clipart.png"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
