@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <button type="button" class="btn btn-dark">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </button>
        <button type="button" class="btn btn-dark"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></button>
</ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0 navbar-right">
        <li class="nav-item active">
            <a class="nav-link navbar-right" id="registerLink" aria-current="page" href="/Account/Register">Register</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link navbar-right" id="registerLink" aria-current="page" href="/Account/Login">Login</a>
        </li>

    </ul>
</ul>
}
    
