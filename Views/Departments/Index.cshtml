
@{
    ViewBag.Title = "Index";
}

<body style="background-color: #eee">

    <section class="vh-100">
        <div class="container h-100 align-content-center align-items-center" style="border-radius: 15px;">
            <br />
            <br />
            
            

            <ul class="list-group list-group-light align-content-center align-items-center " style="border-radius: 15px;">

                <li class="list-group-item d-flex justify-content-between align-items-center">
                    
                    <div class="row align-content-center align-items-center">

                        <h3 class="text-center">Afisare departamente</h3>
                        <br />
                        <br />
                        @if (ViewBag.DepartmentsCount != 0)
                        {
                            foreach (var department in ViewBag.DepartmentsList)
                            {
                                <div class="col-xl-6 col-lg-4  mb-4 ">
                                    <div class="card">

                                        <div class="card-body">
                                            <h5 class="card-title">@department.DepartmentName</h5>
                                            <p class="card-text">@department.DepartmentDescription</p>

                                        </div>
                                        @if (User.IsInRole("Administrator"))
                                        {
                                            <div class="card-footer align-content-center align-items-center justify-content-center">
                                                <a href="/Departments/Edit/@department.DepartmentId">
                                                            <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark">
                                                                Editeaza departament
                                                            </button>
                                                </a>
                                            </div>
                                        }

                                    </div>

                                </div>
                            }
                        }
                    <div class="align-content-center align-items-center text-center">
                        <a href="/Locations/Index/">
                            <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark">
                                Afiseaza lista locatii
                            </button>
                        </a>
                        <br />
                        <br />
                        @if (User.IsInRole("Administrator"))
                        {
                            <a href="/Departments/New">
                                <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark">
                                    Adauga departament
                                </button>
                            </a>
                            <br />

                        }

                        <br />
                    </div>
                    </div>
                </li>

            </ul>
        </div>
    </section>

</body>